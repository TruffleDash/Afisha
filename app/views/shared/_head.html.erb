<div class="py-3" style="background-color: #f8f9fa;">
  <div class="container text-center">
    <a class="navbar-brand" href="/">Afisha</a>
    <% if user_signed_in? %>
      <span style="color: #6c757d;"> <%= current_user.email %></span> 
      <%= link_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline-danger ms-2" %> 
      <%= link_to 'Cart', cart_path(current_user.cart.id)%> 
    <% else %>
      <%= link_to 'Log in', new_user_session_path, class: "btn btn-outline-primary" %> 
      <span style="color: #6c757d;"> or </span> 
      <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-secondary ms-2" %> 
    <% end %>
  </div>
</div>

