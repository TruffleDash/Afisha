<div class="container py-4" style="background-color: #f8f9fa;"> 
  <%= form_with model: concert, html: { class: 'form-horizontal' } do |form| %>
    <div class='form-group mb-3'> 
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', style: "background-color: #e2e6ea;", placeholder: "Enter the name of the concert"%>
      <% concert.errors.full_messages_for(:title).each do |message| %>
        <div style="color: #d63384;"><%= message %></div>
      <% end %>
    </div>

    <div class='form-group mb-3'> 
      <%= form.label :body, class: 'form-label' %>
      <%= form.text_area :body, class: 'form-control', style: "background-color: #e2e6ea;", placeholder: "Enter the description"%>
      <% concert.errors.full_messages_for(:body).each do |message| %>
        <div style="color: #d63384;"><%= message %></div>
      <% end %>
    </div>

    <div class='form-group mb-3'> 
      <%= form.label :price_balcony, class: 'form-label' %>
      <%= form.number_field :price_balcony, class: 'form-control', style: "background-color: #e2e6ea;", min: 0, placeholder: "Enter the number"%>
      <% concert.errors.full_messages_for(:price_balcony).each do |message| %>
        <div style="color: #d63384;"><%= message %></div>
      <% end %>
    </div>

    <div class='form-group mb-3'> 
      <%= form.label :price_amphitheater, class: 'form-label' %>
      <%= form.number_field :price_amphitheater, class: 'form-control', style: "background-color: #e2e6ea;", min: 0, placeholder: "Enter the number"%>
      <% concert.errors.full_messages_for(:price_amphitheater).each do |message| %>
        <div style="color: #d63384;"><%= message %></div>
      <% end %>
    </div>

      <div class='form-group mb-3'> 
      <%= form.label :price_ground_floor, class: 'form-label' %>
      <%= form.number_field :price_ground_floor, class: 'form-control', style: "background-color: #e2e6ea;", min: 0, placeholder: "Enter the number"%>
      <% concert.errors.full_messages_for(:price_ground_floor).each do |message| %>
        <div style="color: #d63384;"><%= message %></div>
      <% end %>
    </div>  
    
    <div class='form-group mb-3'> 
      <%= form.label :event_date, class: 'form-label' %>
      <%= form.date_field :event_date, class: 'form-control', style: "background-color: #e2e6ea;"%>
      <% concert.errors.full_messages_for(:event_date).each do |message| %>
        <div style="color: #d63384;"><%= message %></div>
      <% end %>
    </div>     

    <div class='form-group mb-3'> 
      <%= form.label :event_time, class: 'form-label' %>
      <%= form.time_field :event_time, class: 'form-control', style: "background-color: #e2e6ea;"%>
    </div> 

    <div class='form-group mb-3'>
      <%= form.submit 'Create', class: 'btn', style: "background-color: #b8a9c9; color: #495057;" %> 
    </div>
  <% end %>
</div>
