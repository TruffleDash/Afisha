<div class="container py-4" style="background-color: #f8f9fa;"> 
  <h1 class="text-center" style="color: #6c757d;"><%= @concert.title %></h1> 

  <h3 class="text-center" style="color: #495057;"><%= @concert.body %></h3>
  <p style="color: #495057;"><%= @concert.price_balcony %> balcony price</p>
  <p style="color: #495057;"><%= @concert.price_amphitheater %> amphitheater price</p>
  <p style="color: #495057;"><%= @concert.price_ground_floor %> ground_floor price</p>

  <% if user_signed_in? %>
    <h2 class="text-center mt-4" style="color: #6c757d;">Buy tickets</h2> 
    <%= form_with model: [ @concert, @concert.tickets.build ], html: { class: 'text-center' } do |form| %>
      <div class="form-group">
        <%= form.label :seat, class: 'form-label' %><br>
        <%= form.select :seat, available_seats(@concert), {}, { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= form.submit 'Buy Ticket', class: 'btn btn-primary' %> 
      </div>
    <% end %>
  <% end %>
</div>
